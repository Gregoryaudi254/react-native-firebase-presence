{
  "name": "react-native-firebase-presence",
  "version": "1.0.2",
  "description": "A comprehensive React Native library for Firebase real-time presence management with hooks, providers, and components",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build && npm run test",
    "clean": "rm -rf lib",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregoryaudi254/react-native-firebase-presence.git"
  },
  "keywords": [
    "react-native",
    "firebase",
    "presence",
    "realtime",
    "online",
    "status",
    "hooks",
    "typescript"
  ],
  "author": "Gregoryaudi254 <otile992@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregoryaudi254/react-native-firebase-presence/issues"
  },
  "homepage": "https://github.com/gregoryaudi254/react-native-firebase-presence#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0",
    "firebase": ">=9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.70.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "typescript": "^4.9.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^12.0.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ]
  }
}
